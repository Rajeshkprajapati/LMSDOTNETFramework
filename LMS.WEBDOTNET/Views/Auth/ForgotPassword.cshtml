
@{
    ViewData["Title"] = "ForgotPasssword";
    Layout = null;
}

@model LMS.Model.ViewModel.Shared.UserViewModel


<link href="~/css/Auth/index.css" rel="stylesheet" />
<div class="login-wrap">
    <div class="login-html">
        @if (!string.IsNullOrWhiteSpace(Convert.ToString(ViewData["SuccessMessage"])))
        {
            <a asp-controller="Auth" asp-action="Index">
                <p style="color:#ec6572">@ViewData["SuccessMessage"]</p>
            </a>
        }
        else if (Convert.ToString(@ViewData["SuccessMessage"]) == "User not found")
        {
            <p style="color:#ec6572">Email is not registerd with us</p>
        }
        else if (Convert.ToString(@ViewData["SuccessMessage"]) == "data not found")
        {
            <p style="color:#ec6572">Email is not registerd with us</p>
        }
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Forgot Password</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
        <div class="login-form">
            <form class="sign-in-htm" asp-action="ForgotPassword" method="post">
                <div class="group">
                    <label for="user" class="label" name="Email">Email</label>
                    <input type="email" asp-for="Email" name="email" class="input" placeholder="Email" typeof="email" required>
                </div>
                <div class="group">
                    <input type="submit" class="button" value="Submit">
                </div>
                <div class="hr"></div>
            </form>
        </div>
    </div>
</div>

